<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.groupeisi.minisystemebancaire.controllers.client.ClientDashboardController">

    <!-- Sidebar à gauche -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT"
              style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);
                     -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 12, 0, 5, 0);">
            <padding>
                <Insets top="10" right="10" bottom="20" left="10"/>
            </padding>

            <Label text="🏦 Mini Système Bancaire"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />

            <Separator style="-fx-background-color: rgba(255,255,255,0.3);" />

            <Button text="🏠 Tableau de Bord" fx:id="btnDashboard"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-weight: bold; -fx-background-radius: 8;
                           -fx-pref-width: 200px; -fx-padding: 12;" />
            <Button text="🔄 Transactions" fx:id="btnTransactions" onAction="#goToTransactions"
                    style="-fx-background-color: transparent; -fx-text-fill: white;
                           -fx-pref-width: 200px; -fx-padding: 12;" />
            <Button text="🏦 Crédits" fx:id="btnCredits" onAction="#goToCredits"
                    style="-fx-background-color: transparent; -fx-text-fill: white;
                           -fx-pref-width: 200px; -fx-padding: 12;" />
            <Button text="💳 Cartes Bancaires" fx:id="btnCartes" onAction="#goToCartes"
                    style="-fx-background-color: transparent; -fx-text-fill: white;
                           -fx-pref-width: 200px; -fx-padding: 12;" />
            <Button text="🎫 Support" fx:id="btnSupport" onAction="#goToSupport"
                    style="-fx-background-color: transparent; -fx-text-fill: white;
                           -fx-pref-width: 200px; -fx-padding: 12;" />

            <Region VBox.vgrow="ALWAYS" />

            <Button text="🚪 Déconnexion" fx:id="btnDeconnexion" onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-background-radius: 8;
                           -fx-pref-width: 200px; -fx-padding: 12;" />
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f8f9fa;">
            <VBox spacing="20" style="-fx-padding: 30;">

                <!-- En-tête de bienvenue -->
                <VBox spacing="10">
                    <Label fx:id="lblWelcome" text="Bienvenue, Client"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <Label text="Voici un aperçu de vos comptes et activités récentes"
                           style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                </VBox>

                <!-- Statistiques -->
                <HBox spacing="20" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="10"
                          style="-fx-background-color: white; -fx-background-radius: 10;
                                 -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="💰" style="-fx-font-size: 24px;" />
                        <Label fx:id="lblNbComptes" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label text="Comptes" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="10"
                          style="-fx-background-color: white; -fx-background-radius: 10;
                                 -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="💵" style="-fx-font-size: 24px;" />
                        <Label fx:id="lblSoldeTotal" text="0.00 €" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label text="Solde Total" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="10"
                          style="-fx-background-color: white; -fx-background-radius: 10;
                                 -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="💳" style="-fx-font-size: 24px;" />
                        <Label fx:id="lblNbCartes" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label text="Cartes" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="10"
                          style="-fx-background-color: white; -fx-background-radius: 10;
                                 -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="🏦" style="-fx-font-size: 24px;" />
                        <Label fx:id="lblNbCredits" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label text="Crédits" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                    </VBox>
                </HBox>

                <!-- Mes Comptes -->
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label text="💰 Mes Comptes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                    <TableView fx:id="tableComptes" style="-fx-background-radius: 5;">
                        <columns>
                            <TableColumn fx:id="colNumeroCompte" text="Numéro" prefWidth="150" />
                            <TableColumn fx:id="colTypeCompte" text="Type" prefWidth="100" />
                            <TableColumn fx:id="colSoldeCompte" text="Solde" prefWidth="120" />
                            <TableColumn fx:id="colStatutCompte" text="Statut" prefWidth="80" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Transactions Récentes -->
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label text="🔄 Transactions Récentes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                    <TableView fx:id="tableTransactionsRecentes" style="-fx-background-radius: 5;">
                        <columns>
                            <TableColumn fx:id="colTypeTransaction" text="Type" prefWidth="100" />
                            <TableColumn fx:id="colMontantTransaction" text="Montant" prefWidth="120" />
                            <TableColumn fx:id="colDateTransaction" text="Date" prefWidth="150" />
                            <TableColumn fx:id="colStatutTransaction" text="Statut" prefWidth="100" />
                        </columns>
                    </TableView>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>