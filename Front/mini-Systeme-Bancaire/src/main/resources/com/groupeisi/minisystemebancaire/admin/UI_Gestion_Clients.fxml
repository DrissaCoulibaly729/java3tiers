<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.groupeisi.minisystemebancaire.controllers.admin.AdminClientsController">

    <!-- Sidebar harmonisé -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT"
              style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364); -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 12, 0, 5, 0);">
            <padding><Insets top="10" right="10" bottom="20" left="10"/></padding>

            <Label text="🏦 Mini Système Bancaire"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Separator style="-fx-background-color: rgba(255,255,255,0.3);" />

            <Button text="🏠 Tableau de Bord" fx:id="btnDashboard" onAction="#handleDashboard"
                    style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 220px; -fx-padding: 12;"/>
            <Button text="👥 Gestion des Clients" fx:id="btnClients"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 220px; -fx-padding: 12;"/>
            <Button text="💰 Gestion des Comptes" fx:id="btnComptes" onAction="#handleGestionComptes"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-pref-width: 220px; -fx-padding: 12;"/>
            <Button text="🔄 Gestion des Transactions" fx:id="btnTransactions" onAction="#handleGestionTransactions"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-pref-width: 220px; -fx-padding: 12;"/>
            <Button text="🏦 Gestion des Crédits" fx:id="btnCredits" onAction="#handleGestionCredits"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-pref-width: 220px; -fx-padding: 12;"/>
            <Button text="💳 Gestion des Cartes" fx:id="btnCartes" onAction="#handleGestionCartes"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-pref-width: 220px; -fx-padding: 12;"/>
            <Button text="📩 Service Client &amp; Rapports" fx:id="btnSupport" onAction="#handleGestionSupport"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-pref-width: 220px; -fx-padding: 12;"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button text="🚪 Déconnexion" fx:id="btnDeconnexion" onAction="#handleDeconnexion"
                    style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 220px; -fx-padding: 12;"/>
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="false" pannable="true"
                    prefHeight="650" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="25" alignment="TOP_CENTER"
                      style="-fx-background-color: #f8f9fa; -fx-padding: 40 50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 8, 0, 0, 3);">

                    <Label text="👥 Gestion des Clients" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <!-- Recherche -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="🔍 Rechercher un client :" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                        <TextField fx:id="txtRechercheClient" promptText="Entrez un nom ou ID"
                                   style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-padding: 8;"/>
                        <Button text="🔍 Rechercher" fx:id="btnRechercherClient" onAction="#handleRechercherClient"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;"/>
                    </HBox>

                    <!-- Formulaire d'ajout -->
                    <Label text="🆕 Ajouter un Client" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <GridPane hgap="10" vgap="10">
                        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtNom" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Prénom :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtPrenom" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtEmail" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Téléphone :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtTelephone" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Adresse :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtAdresse" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="Statut :" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <ChoiceBox fx:id="choiceStatut" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-padding: 6;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    </GridPane>

                    <HBox spacing="20" alignment="CENTER">
                        <Button text="✅ Ajouter" fx:id="btnAjouterClient" onAction="#handleAjouterClient"
                                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
                        <Button text="❌ Annuler" fx:id="btnAnnulerClient" onAction="#handleAnnulerClient"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
                    </HBox>

                    <!-- Liste des Clients -->
                    <Label text="📋 Liste des Clients" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TableView fx:id="tableClients" prefHeight="200" prefWidth="600"
                               style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-background-color: white;">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colNom" text="Nom" prefWidth="100"/>
                            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="100"/>
                            <TableColumn fx:id="colStatut" text="Statut" prefWidth="100"/>
                            <TableColumn fx:id="colAction" text="Action" prefWidth="150"/>
                        </columns>
                    </TableView>

                    <!-- Actions -->
                    <HBox spacing="20" alignment="CENTER">
                        <Button text="🔄 Modifier" fx:id="btnModifierClient" onAction="#handleModifierClient"
                                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                        <Button text="⛔ Suspendre" fx:id="btnSuspendreClient" onAction="#handleSuspendreClient"
                                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                        <Button text="✔ Réactiver" fx:id="btnReactiverClient" onAction="#handleReactiverClient"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
