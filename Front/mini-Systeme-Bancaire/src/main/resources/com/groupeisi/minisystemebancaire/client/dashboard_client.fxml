<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupeisi.minisystemebancaire.controllers.client.DashboardClientController">
    <children>
        <VBox layoutX="50.0" layoutY="50.0" prefHeight="700.0" prefWidth="900.0" spacing="20.0">
            <children>
                <Label text="🏦 Espace Client - Tableau de Bord">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>

                <Label fx:id="welcomeLabel" text="Bienvenue !">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <!-- Informations principales -->
                <VBox spacing="10.0">
                    <Label text="📊 Résumé de vos comptes">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <Label fx:id="soldeLabel" text="Solde total: 0 €">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="nombreTransactionsLabel" text="Transactions ce mois: 0">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Table des comptes -->
                <VBox spacing="10.0">
                    <Label text="💳 Vos comptes">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TableView fx:id="comptesTable" prefHeight="150.0">
                        <columns>
                            <TableColumn fx:id="accountNumberCol" prefWidth="200.0" text="N° Compte" />
                            <TableColumn fx:id="accountTypeCol" prefWidth="150.0" text="Type" />
                            <TableColumn fx:id="accountBalanceCol" prefWidth="150.0" text="Solde" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Table des transactions -->
                <VBox spacing="10.0">
                    <Label text="📝 Dernières transactions">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TableView fx:id="dernieresTransactionsTable" prefHeight="150.0">
                        <columns>
                            <TableColumn fx:id="transactionTypeCol" prefWidth="120.0" text="Type" />
                            <TableColumn fx:id="transactionMontantCol" prefWidth="120.0" text="Montant" />
                            <TableColumn fx:id="transactionDateCol" prefWidth="120.0" text="Date" />
                            <TableColumn fx:id="transactionStatutCol" prefWidth="100.0" text="Statut" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Boutons d'action -->
                <VBox spacing="10.0">
                    <Label text="⚡ Actions rapides">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <VBox spacing="8.0">
                        <Button fx:id="virementsBtn" prefWidth="200.0" text="💸 Virements" />
                        <Button fx:id="cartesBtn" prefWidth="200.0" text="💳 Mes Cartes" />
                        <Button fx:id="creditsBtn" prefWidth="200.0" text="💰 Demandes de Crédit" />
                        <Button fx:id="supportBtn" prefWidth="200.0" text="🆘 Support" />
                        <Button fx:id="deconnexionBtn" prefWidth="200.0" text="🚪 Déconnexion" style="-fx-background-color: #ff4444; -fx-text-fill: white;" />
                    </VBox>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>